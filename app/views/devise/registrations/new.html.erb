<div class="bg-teal-400 h-screen w-screen">
  <div class="flex flex-col items-center flex-1 h-full justify-center px-4 sm:px-0">
    <div class="flex rounded-lg shadow-lg w-full sm:w-3/4 lg:w-1/2 bg-white sm:mx-0" style="height: 500px">  
      <div class="flex flex-col w-full md:w-1/2 p-4">
        <div class="flex flex-col flex-1 justify-center mb-8">
          <h2 class="text-4xl text-center font-thin font-semibold">Sign up</h2>
          <div class="w-full mt-4">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal w-3/4 mx-auto" }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <div class="flex flex-col mt-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"flex-grow h-8 px-2 border rounded border-grey-400", placeholder: "Email" %>
              </div>
              <div class="flex flex-col mt-4">
                <%= f.password_field :password, autocomplete: "new-password", class:"flex-grow h-8 px-2 border rounded border-grey-400", placeholder: "Password" %>
              </div>
              <div class="flex flex-col mt-4">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"flex-grow h-8 px-2 border rounded border-grey-400", placeholder: "Confirm password" %>
              </div>
              <div class="flex flex-col mt-8">
                <%= f.submit "Sign up", class: "bg-teal-400 hover:bg-teal-500 text-white text-sm font-semibold py-2 px-4 rounded" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="hidden md:block md:w-1/2 rounded-r-lg" style="background: url('https://images.unsplash.com/photo-1515965885361-f1e0095517ea?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=3300&q=80'); background-size: cover; background-position: center center;"></div>
    </div>
  </div>
</div>
