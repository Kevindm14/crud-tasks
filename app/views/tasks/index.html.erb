<%= link_to 'New task', new_task_path %>

<% @tasks.each do |task| %>
	<h2><%= task.title %></h2>
	<h2><%= task.description %></h2>
	<% if user_signed_in? %>
	<%= link_to 'Edit', edit_task_path(task) %>
	<%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %>
	<% end %>
<% end %>